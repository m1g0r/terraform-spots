resource "aws_security_group" "allow_my_ip" {
  name        = "Allow all"
  description = "Security Group which allows all"
  vpc_id      = module.tmp_vpc.vpc_id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
